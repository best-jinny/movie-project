{{>layout/header}}

<h1>내가 본 영화 리스트 서비스</h1>
<div class="col-md-12">
    <!-- 로그인 기능 영역 -->
    <div class="row">
        <div class="col-md-6">
            {{#userName}}
                Logged in as : <span id="user">{{userName}}</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                <a href="/my-list" class="btn btn-info active" role="button">My Movie List</a>
            {{/userName}}
            {{^userName}}
                <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">
                    Google Login
                </a>
            {{/userName}}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <form>
                <div class="form-group">
                    <label for="keyword">영화 제목을 입력하세요</label>
                    <input type="text" class="form-control" id="keyword" placeholder="제목을 입력하세요">
                </div>
            </form>
            <button type="button" class="btn btn-primary" id="btn-search">검색</button>
        </div>
    </div>


    <div id="movie-list" class="row">

    </div>
</div>








{{>layout/footer}}